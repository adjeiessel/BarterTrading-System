<% include ../partials/header %>
<% include ../partials/navigation %>
<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#ChkDecline").click(function () {
            document.getElementById('Decline').value = "Declined";
        });
    });
</script>
<div class="content">
    <!--for showing product offers-->
    <div id="ProductContent" name="ProductContent" class="content">
        <form class="contact_form" method="POST" action="" name="contact_form" xmlns="http://www.w3.org/1999/html">
            <h1>Accept Offers</h1>

            <h3 style="color: #ff0000">Service Offers</h3>
            <% if(!FirstCustomerResults.length){ %>
            <div class="records">
                <strong>Offer Completed</strong><br>
                <span>Offer/Transaction Completed</span>
            </div>
            <% } %>
            <% for (var i in FirstCustomerResults){ %>
            <!--  <div class="member">-->
            <div class="member mem_format">
                <h4 style="color: #00b7ff"><%= OwnerName %>'s Offer</h4>
                <table class="pro-detail">
                    <tr>
                        <td>
                            <strong>Name</strong>:
                        </td>
                        <td class="format_name">
                            <%= FirstCustomerResults[i].ServiceName %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Service Description</strong>:
                        </td>
                        <td>
                            <%= FirstCustomerResults[i].ServiceDescription %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Published Date</strong>:
                        </td>
                        <td>
                            <%= FirstCustomerResults[i].PublishedDate.toLocaleDateString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Duration</strong>:
                        </td>
                        <td class="format_value">
                            <%= FirstCustomerResults[i].Duration %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Start Date</strong>:
                        </td>
                        <td>
                            <%= FirstCustomerResults[i].StartDate.toLocaleDateString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>End Date:</strong>:
                        </td>
                        <td>
                            <%= FirstCustomerResults[i].EndDate.toLocaleDateString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Date Available</strong>:
                        </td>
                        <td class="format_con">
                            <%= FirstCustomerResults[i].DateAvailable.toLocaleDateString() %>
                        </td>
                    </tr>
                </table>
            </div>
            <% } %>
            <div class="swap"><img src="/images/exchange.png" width="90" height="90"></div>
            <!--for second offer-->
            <% for (var i in SecondCustomerResults){ %>
            <div class="member mem_format">
                <h4 style="color: #00b7ff"><%= MemberName %>'s Offer</h4>
                <table class="pro-detail">
                    <tr>
                        <td>
                            <strong>Name</strong>:
                        </td>
                        <td class="format_name">
                            <%= SecondCustomerResults[i].ServiceName %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Service Description</strong>:
                        </td>
                        <td>
                            <%= SecondCustomerResults[i].ServiceDescription %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Published Date</strong>:
                        </td>
                        <td>
                            <%= SecondCustomerResults[i].PublishedDate.toDateString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Duration</strong>:
                        </td>
                        <td class="format_value">
                            <%= SecondCustomerResults[i].Duration %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Start Date</strong>:
                        </td>
                        <td>
                            <%= SecondCustomerResults[i].StartDate.toLocaleDateString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>End Date:</strong>:
                        </td>
                        <td>
                            <%= SecondCustomerResults[i].EndDate.toLocaleDateString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Date Available</strong>:
                        </td>
                        <td class="format_value">
                            <%= SecondCustomerResults[i].DateAvailable.toLocaleDateString() %>
                        </td>
                    </tr>
                </table>
            </div>
            <% } %>
            <div class="submit_offer">
                <input type="text" value="" id="Decline" name="Decline" hidden="true">
                <input type="submit" name="submit" id="submit" value="Accept Offer"/>
                <input type="submit" name="ChkDecline" id="ChkDecline" value="Decline Offer"/>
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>